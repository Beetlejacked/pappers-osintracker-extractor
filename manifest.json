{
  "manifest_version": 3,
  "name": "Pappers Info Extractor",
  "version": "1.0.0",
  "description": "Extension pour extraire les informations des entreprises depuis Pappers.fr",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.pappers.fr/*",
    "https://api.pappers.fr/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.pappers.fr/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

